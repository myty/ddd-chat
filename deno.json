{
  "name": "@myty/fresh-workspace",
  "version": "0.0.0",
  "exports": {},
  "tasks": {
    "dev": "deno task --filter @myty/fresh-workspace-web dev",
    "build": "deno task --filter @myty/fresh-workspace-web build",
    "start": "deno task --filter @myty/fresh-workspace-web start",
    "fix": "deno fmt & deno run -A npm:@biomejs/biome format --write . & deno lint --fix",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx && deno run -A npm:@biomejs/biome format ."
  },
  "imports": {
    "@biomejs/biome": "npm:@biomejs/biome@^1.9.4",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/http": "jsr:@std/http@^1.0.13",
    "@std/testing": "jsr:@std/testing@^1.0.9"
  },
  "workspace": [
    "./apps/api",
    "./apps/web",
    "./packages/domain",
    "./packages/ioc",
    "./packages/persistence",
    "./packages/github"
  ],
  "fmt": {
    "exclude": ["**/*.tsx"]
  }
}
